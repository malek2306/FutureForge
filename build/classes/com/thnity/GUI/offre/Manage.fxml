            </VBox>

            <VBox spacing="10.0">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="PlacesDispo :">
                    <font>
                        <Font name="Arial" size="18.0"/>
                    </font>
                    <VBox.margin>
                        <Insets left="5.0"/>
                    </VBox.margin>
                </Text>
                <TextField fx:id="placesDispoTF" alignment="TOP_LEFT" promptText="Saisir placesDispo"
                           styleClass="form-control"/>
            </VBox>

        </HBox>

        <HBox/>

        <HBox>

